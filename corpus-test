#! /bin/sh

ntrain=250

corpus=$1

if [ ! '(' -d $corpus/ham -a -d $corpus/spam ')' ]; then
    echo $corpus does not look like a corpus: ham/, spam/, or both missing >&2
    exit 1
fi

bf=$(pwd)/bfilter

if [ ! -x $bf ]; then
    echo $bf is not executable >&2
    exit 1
fi

export BFILTER_DB=$(mktemp)

cd $corpus/spam
nspam=$(ls | wc -l)
mspam=$(echo $nspam / $ntrain | bc)

for m in $(ls | awk "NR % $mspam == 0 { print }"); do
    echo $m
    $bf isspam < $m
done

cd $corpus/ham
nham=$(ls | wc -l)
mham=$(echo $nham / $ntrain | bc)

for m in $(ls | awk "NR % $mham == 0 { print }"); do
    echo $m
    $bf isreal < $m
done

cd $corpus/spam
out=$(mktemp)
for m in $(ls); do
    $bf test < $m # 2>/dev/null
done > $out
right=$(grep -c spam $out)
echo right $right
wrong=$(grep -c real $out)
echo wrong $wrong
pspam=$(echo "scale=2; $right * 100 / ($right + $wrong)" | bc)
rm $out

cd $corpus/ham
out=$(mktemp)
for m in $(ls); do
    $bf test < $m # 2>/dev/null
done > $out
right=$(grep -c real $out)
echo right $right
wrong=$(grep -c spam $out)
echo wrong $wrong
pham=$(echo "scale=2; $right * 100 / ($right + $wrong)" | bc)
rm $out

echo
echo "ham: $pham% correct, spam: $pspam% correct"
ls -l $BFILTER_DB
